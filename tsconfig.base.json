{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "strict": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@nearme-study-session/foo": ["lib/foo/src/index.ts"],
      "@nearme-study-session/open-telemetry-intro-instrumentation": [
        "open-telemetry-intro/instrumentaion/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
